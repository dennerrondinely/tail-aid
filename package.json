{
  "name": "tail-aid",
  "displayName": "TailAid",
  "description": "A powerful VS Code extension to enhance your Tailwind CSS development experience with intelligent syntax highlighting and real-time suggestions.",
  "version": "0.0.3",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TailAid Configuration",
      "properties": {
        "tailwindcss.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable TailAid"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  },
  "keywords": [
    "tailwind",
    "css",
    "syntax highlighting",
    "vscode extension"
  ],
  "author": "Denner Rondinely",
  "repository": {
    "type": "git",
    "url": "https://github.com/dennerrondinely/tail-aid.git"
  },
  "bugs": {
    "url": "https://github.com/dennerrondinely/tail-aid/issues"
  },
  "homepage": "https://github.com/dennerrondinely/tail-aid#readme",
  "publisher": "Denner"
}